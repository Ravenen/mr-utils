{
    "manifest_version": 3,
    "name": "MRFlow",
    "version": "1.3.1",
    "description": "Utilities for GitLab merge requests that make life easier and project cleaner",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.gitlab.com/*/merge_requests/",
                "*://*.gitlab.com/*/merge_requests",
                "*://*.gitlab.com/*/merge_requests*"
            ],
            "js": [
                "content_script.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{d16c5235-1761-48f3-9fb3-85e3a592e362}"
        }
    }
}