{
    "manifest_version": 3,
    "name": "GitLab Merge Request Kanban Board",
    "version": "1.0",
    "description": "Transforms the GitLab merge requests list into a kanban board with helpful badges.",
    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.gitlab.com/*/merge_requests/",
                "*://*.gitlab.com/*/merge_requests",
                "*://*.gitlab.com/*/merge_requests*"
            ],
            "js": [
                "content_script.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ]
}